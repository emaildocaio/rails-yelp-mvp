<div class="container mt-5">
  <h1>Your choise is</h1>

  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.category %></p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>

  <div class="mt-5 bm-5">
    <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
    <%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
    <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>


    <%= link_to "Delete #{@restaurant.name}" ,
                restaurant_path(@restaurant),
                method: :delete,
                data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>

<div class="row">
  <div class="col-10">
    <ul class="list-group mt-5 mb-5">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %></li>
      <% end %>
    </ul>
  </div>
</div>

</div>
