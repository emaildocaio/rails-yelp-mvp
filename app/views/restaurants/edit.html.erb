<div class="container m-5 justify-content-center">
  <h1>Edit this restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit "Update a restaurant", class: "btn btn-primary" %>
        <%= link_to 'Back', restaurant_path, class: "btn btn-primary" %>

  <% end %>
</div>
